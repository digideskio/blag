<div class="row flash">
  <div class="span12">
    <%= flash[:success] %>
    <%= flash[:error] %>
  </div>
</div>

<div class="row">
  <div class="span10 offset2">
    <h1>New article</h1>
    <%= simple_form_for(@article) do |f| %>
      <div class="row">
        <div class="span2">
          <%= f.input :title %>
        </div>
      </div>
      <div class="row">
        <div class="span2">
          <%= f.input :author %>
        </div>
      </div>
      <div class="row">
        <div class="span2">
          <%= f.input :content %>
        </div>
      </div>
      <%= f.submit %>
    <% end %>

  </div>
</div>